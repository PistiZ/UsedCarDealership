<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>hu.pistiz.cars</groupId>
    <artifactId>used-car-dealership</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>
    <description>
        Használtautók nyilvántartása kereskedői oldalról.
        Kereskedés regisztrálása, kereskedés egyenlegének vezetése.
    </description>
    <inceptionYear>2016</inceptionYear>
    <organization>
        <name>Debreceni Egyetem, Informatikai Kar</name>
        <url>https://w1.inf.unideb.hu/</url>
    </organization>
    <developers>
        <developer>
            <id>1</id>
            <name>Balogh István Dávid</name>
            <email>pistiz7@gmail.com</email>
            <organization>Debreceni Egyetem, Informatikai Kar</organization>
            <roles>
                <role>fejlesztő</role>
            </roles>
        </developer>
    </developers>
    <scm>
        <connection>scm:git:http://github.com/PistiZ/UsedCarDealership.git</connection>
        <developerConnection>scm:git:https://github.com/PistiZ/UsedCarDealership.git</developerConnection>
        <url>https://github.com/PistiZ/UsedCarDealership</url>
    </scm>
    <licenses>
        <license>
            <name>The GNU General Public License v3.0</name>
            <url>http://www.gnu.org/licenses/gpl-3.0.html</url>
        </license>
    </licenses>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <archive>
                                <manifest>
                                    <mainClass>hu.pistiz.cars.CarDealershipHandler</mainClass>
                                </manifest>
                            </archive>
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>1.4.1</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <id>enforce-java-version</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireJavaVersion>
                                    <version>1.8</version>
                                </requireJavaVersion>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
